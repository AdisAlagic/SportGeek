<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat">
        <item name="android:background">#000</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:statusBarColor">#000</item>
        <item name="android:navigationBarColor">#000</item>
        <item name="android:colorAccent">#2196F3</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:colorControlActivated">#2196F3</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#0037FF</item>
        <item name="colorPrimaryDark">#0037FF</item>
        <item name="colorAccent">#0037FF</item>
    </style>

    <style name="DarkActionBar" parent="Dark">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
    </style>
</resources>